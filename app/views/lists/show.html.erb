<div class="container">
  <div class="d-flex justify-content-between my-3">
    <h2><%= @list.name %></h2>
    <%= link_to "Add Bookmark", new_list_bookmark_path(@list), class: "btn btn-warning" %>
  </div>
  <%= render "bookmarks/form", list: @list, bookmark: @bookmark %>
  <div class="card-grid">
    <% @list.movies.each do |movie| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
        <%= movie.title %>
      </div>
    <% end %>
  </div>
</div>
